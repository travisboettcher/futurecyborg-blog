<h2><%= @shopping_list.name %></h2>

<%= render FutureCyborg.ListItemView, "form.html", 
    changeset: FutureCyborg.ListItem.changeset(%FutureCyborg.ListItem{}),
    action: list_item_path(@conn, :create), shopping_list: @shopping_list %>

<ul class="list_group">
  <%= render_many @shopping_list.list_items, FutureCyborg.ListItemView, "listItem.html" %>
</ul>

<%= link "Edit", to: shopping_list_path(@conn, :edit, @shopping_list) %>
<%= link "Back", to: shopping_list_path(@conn, :index) %>
